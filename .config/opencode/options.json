{
    "$schema": "https://opencode.ai/config.json",
    "model": "opencode-zen/glm-4.7-free",
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "qwen3-coder:480b-cloud": {
                    "name": "Qwen3 Coder 480B Cloud"
                },
                "glm-4.7:cloud": {
                    "name": "GLM-4.7"
                }
            }
        }
    },
    "lsp": {
        "markdown": {
            "command": ["marksman"],
            "extensions": [".md"]
        },
        "toml": {
            "command": ["taplo"],
            "extensions": [".toml"]
        }
    },
    "formatter": {
        "stylua": {
            "command": ["stylua", "-a"],
            "extensions": [".lua"]
        },
        "markdownlint": {
            "command": ["markdownlint", "-d"],
            "extensions": [".md"]
        },
        "cpplint": {
            "command": ["cpplint"],
            "extensions": [".c", ".cpp", ".h", ".hpp"]
        },
        "rustfmt": {
            "command": ["rustfmt"],
            "extensions": [".rs"]
        },
        "shfmt": {
            "command": ["shfmt", "-w", "-i", "4", "--apply-ignore", "."],
            "extensions": [".sh"]
        }
    }
}
