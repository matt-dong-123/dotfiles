#!/usr/bin/env bash

wallpaper=$(realpath ~/.config/omacase/current/theme/backgrounds)
fzf_args=(
    --preview "~/.config/zsh/extensions/fzf-preview.sh $wallpaper/{}"
    --border-label '  Backgrounds '

    --style full
    --prompt '❯ '
    --no-height
    --layout reverse
    --border --padding 1,2
    --border-label-pos 2
    --input-label ' Input '
    --bind 'result:transform-list-label:
        if [[ -z $FZF_QUERY ]]; then
          echo " $FZF_MATCH_COUNT items "
        else
          echo " $FZF_MATCH_COUNT matches for [$FZF_QUERY] "
        fi
        '
    --bind 'focus:transform-preview-label:[[ -n {} ]] && printf " Previewing [%s] " {}'
    --color 'border:blue,label:bright-blue'
    --color 'preview-border:magenta,preview-label:bright-magenta'
    --color 'list-border:green,list-label:bright-green'
    --color 'input-border:red,input-label:bright-red'
    --color 'info:bright-black,prompt:bright-red,pointer:bright-green'
    --color 'marker:bright-green,spinner:bright-green,header:bright-green'
)

selection=$(ls -1 $wallpaper | fzf "${fzf_args[@]}")

if [[ -n "$selection" ]]; then
    osascript -e "tell application \"System Events\" to set picture of every desktop to POSIX file \"$wallpaper/$selection\""
    ~/.config/omacase/bin/gum-done
fi
