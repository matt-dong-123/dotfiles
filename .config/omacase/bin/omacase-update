#!/usr/bin/env -S zsh -i

gum style --foreground 5 "Updating Omacase..."
git -C "$HOME/dotfiles" pull --autostash
git -C "$HOME/dotfiles" diff --check || git -C "$HOME/dotfiles" reset --merge

echo

gum style --foreground 5 "Updating Homebrew Packages..."
brew update
brew upgrade

echo

gum style --foreground 5 "Updating nvim plugins..."
nvim --headless "+Lazy! update" +qa

echo

gum style --foreground 5 "Updating yazi plugins..."
ya pkg upgrade

echo

gum style --foreground 5 "Updating tmux plugins..."
~/.config/tmux/plugins/tpm/bin/update_plugins all

echo

gum style --foreground 5 "Updating zsh plugins..."
zgenom selfupdate
zgenom update

echo

gum style --foreground 5 "Updating gh extensions..."
gh extension upgrade --all

echo

gum style --foreground 5 "Updating tldr cache..."
tldr --update

gum-done
