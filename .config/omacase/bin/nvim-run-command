#!/usr/bin/env bash
set -euo pipefail

if [[ $# -ne 1 ]]; then
    echo "Usage: $0 <file-with-nvim-lua-command>"
    exit 1
fi

RUNTIME=${XDG_RUNTIME_DIR:-$TMPDIR}
CODE=$(<"$1")
for sock in "$RUNTIME"/nvim.*.0; do
    [[ -S $sock ]] || continue
    nvim --server "$sock" --remote-send "<cmd>lua $CODE<CR>" 2>/dev/null || :
done
