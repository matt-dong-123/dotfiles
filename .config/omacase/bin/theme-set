#!/usr/bin/env -S bash -l

if [[ -z "$1" ]]; then
    echo "No theme specified." >&2
    exit 1
fi

THEMES_DIR="$HOME/.config/omacase/themes"
CURRENT_THEME_DIR="$HOME/.config/omacase/current/theme"
NEOVIM_THEME_FILE="$CURRENT_THEME_DIR/neovim.lua"

THEME_NAME=$(echo "$1" | perl -pe 's/ /-/g; $_ = lc $_')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

if [[ ! -d "$THEME_PATH" ]]; then
    echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR" >&2
    exit 2
fi

ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

parallel --no-notice --halt-on-error 2 ::: \
    "jq -s '.[0] * .[1]' ~/.config/opencode/options.json ~/.config/omacase/current/theme/opencode_theme.json >~/.config/opencode/opencode.json" \
    "yq eval-all 'select(fileIndex == 0) * select(fileIndex == 1)' ~/.config/omacase/current/theme/lazygit.yml ~/.config/lazygit/options.yml >~/.config/lazygit/config.yml" \
    "yq \". *= load(\\\"$HOME/.config/gh-dash/options.yml\\\")\" ~/.config/omacase/current/theme/gh-dash.yml >~/.config/gh-dash/config.yml"

if [[ $? -ne 0 ]]; then
    echo "Configuration merge failed" >&2
    exit 3
fi

parallel --no-notice ::: \
    "pkill -USR1 kitty >/dev/null 2>&1" \
    "pkill -USR2 btop >/dev/null 2>&1" \
    "pkill -USR2 ghostty >/dev/null 2>&1" \
    "pkill -USR2 opencode >/dev/null 2>&1" \
    "pkill -USR2 borders >/dev/null 2>&1"

nvim-run-command "$NEOVIM_THEME_FILE"

WALLPAPER=$(realpath ~/.config/omacase/current/theme/backgrounds/default.png)
osascript -e "tell application \"System Events\" to set picture of every desktop to \"$WALLPAPER\"" &

sketchybar --reload
