#!/usr/bin/env bash

source "$HOME/.bash_profile"

fzf_args=(
    --preview 'HOMEBREW_COLOR=1 brew info {}'
    --border-label ' Û∞èó brew uninstall '
)

pkg_names=$(brew list -1 | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
    echo "$pkg_names" | tr '\n' ' ' | xargs brew uninstall
    homebrew-update-brewfile
    gum-done
fi
