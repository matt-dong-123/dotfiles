#!/usr/bin/env bash

source "$HOME/.bash_profile"

packages_menu() {
    CHOICE=$(gum filter "Install" "Uninstall" "Upgrade" "Tap" "Untap" "Search" \
        "Sync packages with Brewfile" "Sync Brewfile with packages" "Restart")

    case $CHOICE in
    "Install")
        homebrew-install
        ;;
    "Uninstall")
        homebrew-uninstall
        ;;
    "Upgrade")
        homebrew-upgrade
        ;;
    "Tap")
        homebrew-tap
        ;;
    "Untap")
        homebrew-untap
        ;;
    "Search")
        homebrew-search
        ;;
    "Sync")
        homebrew-sync-brewfile
        ;;
    "Restart")
        homebrew-restart-service
        ;;
    esac
}

themes_menu() {
    theme-select
}

backgrounds_menu() {
    background-select
}

about_menu() {
    about-fastfetch
}

update_menu() {
    omacase-update
}

CHOICE=$(gum filter "Packages" "Themes" "Backgrounds" "About" "Update Omacase")

case $CHOICE in
"Packages")
    packages_menu
    ;;
"Themes")
    themes_menu
    ;;
"Backgrounds")
    backgrounds_menu
    ;;
"About")
    about_menu
    ;;
"Update Omacase")
    update_menu
    ;;
esac
