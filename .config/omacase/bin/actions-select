#!/usr/bin/env bash

packages_menu() {
    CHOICE=$(gum filter "Install" "Uninstall" "Upgrade" "Tap" "Untap" "Search" "Sync" "Restart")

    case $CHOICE in
    "Install")
        ~/.config/omacase/bin/homebrew-install
        ;;
    "Uninstall")
        ~/.config/omacase/bin/homebrew-uninstall
        ;;
    "Upgrade")
        ~/.config/omacase/bin/homebrew-upgrade
        ;;
    "Tap")
        ~/.config/omacase/bin/homebrew-tap
        ;;
    "Untap")
        ~/.config/omacase/bin/homebrew-untap
        ;;
    "Search")
        ~/.config/omacase/bin/homebrew-search
        ;;
    "Sync")
        ~/.config/omacase/bin/homebrew-sync-brewfile
        ;;
    "Restart")
        ~/.config/omacase/bin/homebrew-restart-service
        ;;
    esac
}

themes_menu() {
    ~/.config/omacase/bin/theme-select
}

backgrounds_menu() {
    ~/.config/omacase/bin/background-select
}

about_menu() {
    ~/.config/omacase/bin/about-fastfetch
}

update_menu() {
    ~/.config/omacase/bin/omacase-update
}

CHOICE=$(gum filter "Packages" "Themes" "Backgrounds" "About" "Update Omacase")

case $CHOICE in
"Packages")
    packages_menu
    ;;
"Themes")
    themes_menu
    ;;
"Backgrounds")
    backgrounds_menu
    ;;
"About")
    about_menu
    ;;
"Update Omacase")
    update_menu
    ;;
esac
